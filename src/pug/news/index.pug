doctype html
html(lang='de')

    head

        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description', content='News aus dem COPPA Förderprojekt für die Plastik Kreislaufwirtschaft')
        meta(name='author', content='')

        title COPPA News - Circular Plastic Economy

        // Favicon
        link(rel='icon', type='image/x-icon', href='/assets/favicon.ico')

        link(rel='preload' href='/assets/img/logo/xs.png' as='image')

        // Bootstrap icons
        link(href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css', rel='stylesheet', type='text/css')

        // AOS
        link(href='https://unpkg.com/aos@2.3.1/dist/aos.css', rel='stylesheet', type='text/css')

        // Google fonts
        link(href='https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic', rel='stylesheet', type='text/css')

        // Core theme CSS (includes Bootstrap)
        link(href='/css/styles.css', rel='stylesheet')

    body

        // Navigation
        nav.navbar.fixed-top.navbar-expand-lg.bg-light.shadow
            .container
                a.navbar-brand.me-5(href='/')
                    h1.text-primary.navbar-logo
                        | C
                        img(src='/assets/img/logo/md.png', alt='COPPA')
                        | PPA

                button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                .collapse.navbar-collapse(id='navbarNav')
                    ul.navbar-nav.navbar-nav-scroll
                        li.nav-item
                            a.nav-link.text-primary(href="#") News
                        li.nav-item
                            a.nav-link(href="/#goals") Ziele
                        li.nav-item
                            a.nav-link(href="/#workingpackages") Arbeitspakete
                        li.nav-item
                            a.nav-link(href="/#partners") Partner
                    

        // Masthead
        header.news.masthead
            .container.position-relative
                .row.justify-content-evenly
                    .col-xl-6.align-self-center
                        .text-center.text-xl-end.text-white
                            // Page heading
                            h1 COPPA News
                            h2.text-secondary.mb-5 Die aktuellen Entwicklungen im Projekt

                    .col-6.col-xl-3.align-self-center.rotating.text-center
                        img.w-75(src='/assets/img/logo/lg.png', alt='COPPA', data-aos='spin-in', data-aos-duration='2000')


        section.news
            .container.py-5

                .row.g-5

                    // Header article
                    .col-lg-6.px-md-5
                        img.w-100(src='/assets/img/news/Podcast.png', alt='Article header')
                    .col-lg-6.px-md-5
                        h3.text-primary.my-3 COPPA beim SKZ - Podcast "Kunststoff Nachgefragt"
                        p In dieser Folge verbinden sich zwei der absoluten Trendthemen in der Kunststoffindustrie. Digitalisierung und Nachhaltigkeit. Zu Gast bei "Kunststoff Nachgefragt", dem SKZ Podcast, sind Roman Winter von der GS1-Germany GmbH und Georg Schwering von der European EPC Competence Center GmbH (EECC). Sie sprechen über das Projekt COPPA, den digitalen Produktpass für Lebensmittelverpackungen und welche Möglichkeiten dies für Rezyklatanwendungen und die Ermittlung des Carbon Footprint schafft.

                        .row.justify-content-between
                            .col-sm-6
                                a.text-primary.mt-3(href='https://soundcloud.com/user-685808333/folge-67-r-winter-gs1-g-schwering-eecc-lebensmittelverpackung-und-digitaler-produktpass') Reinhören
                                    i.bi.bi-arrow-right-short
                            .col-sm-6.text-end
                                small.text-muted 
                                    | 03. August 2023 - Sophia Botsch
                                    img.mx-1.mb-1(src='/assets/img/logo/xs.png', alt='COPPA')
                    

                    // Sub articles
                    // Article divider - don't touch
                    .col-12.text-center
                        div.mx-auto.w-75.border-bottom.border-2.border-secondary.border-opacity-50.my-5
                    // --------------------------------------------------------------------------------

                    // First sub article
                    .col-lg-6.px-md-5
                        img.w-100(src='/assets/img/news/article-1.WebP', alt='Article header')
                        h3.text-primary.my-3 Title
                        p Short intro starting here ...
                        .row.justify-content-between
                            .col-sm-6
                                a.text-primary.mt-3(href='https://github.com/COPPA-CCP/') Weiterlesen
                                    i.bi.bi-arrow-right-short
                            .col-sm-6.text-end
                                small.text-muted 
                                    | 20. August 2023 - Sophia Botsch
                                    img.mx-1.mb-1(src='/assets/img/logo/xs.png', alt='COPPA')

                    // Second sub article
                    .col-lg-6.px-md-5
                        img.w-100(src='/assets/img/news/article-1.WebP', alt='Article header')
                        h3.text-primary.my-3 Title
                        p Short intro starting here ...
                        .row.justify-content-between
                            .col-sm-6
                                a.text-primary.mt-3(href='https://github.com/COPPA-CCP/') Weiterlesen
                                    i.bi.bi-arrow-right-short
                            .col-sm-6.text-end
                                small.text-muted 
                                    | 20. August 2023 - Sophia Botsch
                                    img.mx-1.mb-1(src='/assets/img/logo/xs.png', alt='COPPA')



        include ../components/footer.pug

        // Bootstrap core JS
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js')

        .div(id='preloader')
            img(src='/assets/img/logo/xs.png')

        // AOS
        script(src='https://unpkg.com/aos@2.3.1/dist/aos.js')

        // Core theme JS
        script(src='/js/scripts.js')
