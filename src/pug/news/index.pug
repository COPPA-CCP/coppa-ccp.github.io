    body

        // Navigation
        nav.navbar.fixed-top.navbar-expand-lg.bg-light.shadow
            .container
                a.navbar-brand.me-5(href='/')
                    h1.text-primary.navbar-logo
                        | C
                        img(src='/assets/img/logo/md.png', alt='COPPA')
                        | PPA

                button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                .collapse.navbar-collapse(id='navbarNav')
                    ul.navbar-nav.navbar-nav-scroll
                        li.nav-item
                            a.nav-link.text-primary(href="#") News
                        li.nav-item
                            a.nav-link(href="/#goals") Ziele
                        li.nav-item
                            a.nav-link(href="/#workingpackages") Arbeitspakete
                        li.nav-item
                            a.nav-link(href="/#partners") Partner
                    

        // Masthead
        header.news.masthead
            .container.position-relative
                .row.justify-content-evenly
                    .col-xl-6.align-self-center
                        .text-center.text-xl-end.text-white
                            // Page heading
                            h1 COPPA News
                            h2.text-secondary.mb-5 Die aktuellen Entwicklungen im Projekt

                    .col-6.col-xl-3.align-self-center.rotating.text-center
                        img.w-75(src='/assets/img/logo/lg.png', alt='COPPA', data-aos='spin-in', data-aos-duration='2000')


        section.news
            .container.py-5

                .row.g-5
                    // Header article
                    .col-lg-6.px-md-5
                        img.w-100(src='/assets/img/news/article-1.WebP', alt='Article header')
                    .col-lg-6.px-md-5
                        h3.text-primary.my-3 Latest post
                        p Short intro starting here ...
                        .row.justify-content-between
                            .col-sm-6
                                a.text-primary.mt-3(href='https://github.com/COPPA-CCP/') Weiterlesen
                                    i.bi.bi-arrow-right-short
                            .col-sm-6.text-end
                                small.text-muted 
                                    | 20. August 2023 - Sophia Botsch
                                    img.mx-1.mb-1(src='/assets/img/logo/xs.png', alt='COPPA')
                    
                    .col-12.text-center
                        div.mx-auto.w-75.border-bottom.border-2.border-secondary.border-opacity-50.my-5

                    // Sub articles
                    .col-lg-6.px-md-5
                        img.w-100(src='/assets/img/news/article-1.WebP', alt='Article header')
                        h3.text-primary.my-3 Title
                        p Short intro starting here ...
                        .row.justify-content-between
                            .col-sm-6
                                a.text-primary.mt-3(href='https://github.com/COPPA-CCP/') Weiterlesen
                                    i.bi.bi-arrow-right-short
                            .col-sm-6.text-end
                                small.text-muted 
                                    | 20. August 2023 - Sophia Botsch
                                    img.mx-1.mb-1(src='/assets/img/logo/xs.png', alt='COPPA')

                    .col-lg-6.px-md-5
                        img.w-100(src='/assets/img/news/article-1.WebP', alt='Article header')
                        h3.text-primary.my-3 Title
                        p Short intro starting here ...
                        .row.justify-content-between
                            .col-sm-6
                                a.text-primary.mt-3(href='https://github.com/COPPA-CCP/') Weiterlesen
                                    i.bi.bi-arrow-right-short
                            .col-sm-6.text-end
                                small.text-muted 
                                    | 20. August 2023 - Sophia Botsch
                                    img.mx-1.mb-1(src='/assets/img/logo/xs.png', alt='COPPA')




        // Call to Action
        section#signup.call-to-action.text-white.text-center
            .container.position-relative
                .row.justify-content-center
                    .col-xl-6
                        h2.mb-4 Ready to get started? Sign up now!
                        // Signup form
                        
                        // * * * * * * * * * * * * * * *
                        // * * SB Forms Contact Form * *
                        // * * * * * * * * * * * * * * *

                        // This form is pre-integrated with SB Forms.
                        // To make this form functional, sign up at
                        // https://startbootstrap.com/solution/contact-forms
                        // to get an API token!

                        form.form-subscribe#contactFormFooter(data-sb-form-api-token='API_TOKEN')

                            // Email address input
                            .row
                                .col
                                    input#emailAddressBelow.form-control.form-control-lg(type='email' placeholder='Email Address' data-sb-validations='required,email')
                                    .invalid-feedback.text-white(data-sb-feedback='emailAddressBelow:required')
                                        | Email Address is required.
                                    .invalid-feedback.text-white(data-sb-feedback='emailAddressBelow:email')
                                        | Email Address Email is not valid.

                                .col-auto
                                    button#submitButton.btn.btn-primary.btn-lg.disabled(type='submit') Submit

                            // Submit success message
                            //
                            // This is what your users will see when the form
                            // has successfully submitted

                            #submitSuccessMessage.d-none
                                .text-center.mb-3
                                    .fw-bolder Form submission successful!
                                    p To activate this form, sign up at
                                    a.text-white(href='https://startbootstrap.com/solution/contact-forms') https://startbootstrap.com/solution/contact-forms

                            // Submit error message
                            //
                            // This is what your users will see when there is
                            // an error submitting the form

                            #submitErrorMessage.d-none
                                .text-center.text-danger.mb-3 Error sending message!

