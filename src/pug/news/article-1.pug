doctype html
html(lang='de')

    head

        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description', content='')
        meta(name='author', content='')

        title COPPA Förderprojekt - Circular Plastic Economy

        // Favicon
        link(rel='icon', type='image/x-icon', href='assets/favicon.ico')

        link(rel='preload' href='assets/img/logo/xs.png' as='image')

        // Bootstrap icons
        link(href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css', rel='stylesheet', type='text/css')

        // AOS
        link(href='https://unpkg.com/aos@2.3.1/dist/aos.css', rel='stylesheet', type='text/css')

        // Google fonts
        link(href='https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic', rel='stylesheet', type='text/css')

        // Core theme CSS (includes Bootstrap)
        link(href='/css/styles.css', rel='stylesheet')

    body

        // Navigation
        nav.navbar.fixed-top.navbar-expand-lg.bg-light.shadow
            .container
                a.navbar-brand.me-5(href='/')
                    h1.text-primary.navbar-logo
                        | C
                        img(src='/assets/img/logo/md.png', alt='COPPA')
                        | PPA

                button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                .collapse.navbar-collapse(id='navbarNav')
                    ul.navbar-nav.navbar-nav-scroll
                        li.nav-item
                            a.nav-link.text-primary(href="/news") News
                        li.nav-item
                            a.nav-link(href="/#goals") Ziele
                        li.nav-item
                            a.nav-link(href="/#workingpackages") Arbeitspakete
                        li.nav-item
                            a.nav-link(href="/#partners") Partner
                    

        // Masthead
        header.article.masthead(style="background: linear-gradient(90deg, rgba(0, 0, 0, 0.85), rgba(70, 70, 70, 0.8)), url('/assets/img/news/article-1.WebP') no-repeat center center; background-size: cover;")
            .container.position-relative
                .row.justify-content-center
                    .col-xl-8.align-self-center
                        .text-white.text-md-start.text-center
                            // Title
                            h1 Article Title
                            h2.text-secondary.mb-5 Short intro. Can be deleted

            .header-logo
                .text-white(data-aos='fade-left', data-aos-delay='2000')
                    | COPPA Förderprojekt
                    img.ms-1(src='/assets/img/logo/sm.png')


        section.article
            .container.py-5.px-lg-5

                // TLDR intro
                p.fw-bold Short intro text TLDR
                
                // Author line
                p.author.text-muted.text-md-end.mt-3.mb-5 20. August 2023 - Sophia Botsch

                // Regular text
                p.my-3 Long text article and stuff

                // full width image
                .row.justify-content-center.g-5.py-5
                    .col-lg-12
                        img.w-100(src='/assets/img/news/article-1.WebP')

                // half width image
                .row.justify-content-center.g-5.py-5
                    .col-lg-6
                        img.w-100(src='/assets/img/news/article-1.WebP')


                // Text with link
                p.my-3
                    | More text text text text with
                    a(href="https://id.eecc.de") link
                    | in the middle of text and now multi images 

                // Multi image
                .row.justify-content-center.g-5.py-5
                    .col-lg-6
                        img.w-100(src='/assets/img/news/article-1.WebP')
                    .col-lg-6
                        img.w-100(src='/assets/img/news/article-1.WebP')
                
                // Text
                p.my-3
                    | Get more text on the road
                



        include ../components/footer.pug

        // Bootstrap core JS
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js')

        .div(id='preloader')
            img(src='/assets/img/logo/xs.png')

        // AOS
        script(src='https://unpkg.com/aos@2.3.1/dist/aos.js')

        // Core theme JS
        script(src='/js/scripts.js')
